<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/stroom-proxy/lib</outputDirectory>
            <includes>
                <!--<include>stroom-proxy:stroom-proxy-remote</include>-->
                <include>stroom-proxy:stroom-proxy-util</include>
                <include>stroom-proxy:stroom-proxy-app</include>
                <include>mysql:mysql-connector-java</include>
            </includes>
            <fileMode>0640</fileMode>
            <directoryMode>0750</directoryMode>
        </dependencySet>
        <!-- Unpack the documentation into the the ZIP -->
        <!--<dependencySet>-->
        <!--<outputDirectory>/stroom-proxy/stroom-doc</outputDirectory>-->
        <!--<includes>-->
        <!--<include>stroom:stroom-doc</include>-->
        <!--</includes>-->
        <!--<unpack>true</unpack>-->
        <!--<useStrictFiltering>true</useStrictFiltering>-->
        <!--<useProjectArtifact>false</useProjectArtifact>-->
        <!--</dependencySet>-->
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/stroom-proxy</outputDirectory>
            <includes>
                <include>apache*/**</include>
                <include>template*/**</include>
                <include>bin/*</include>
                <include>Dockerfile</include>
            </includes>
            <excludes>
                <!-- Exclude all shell scripts -->
                <exclude>**/*.sh</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0640</fileMode>
            <directoryMode>0750</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/stroom-proxy</outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <excludes>
                <!-- Exclude development scripts -->
                <exclude>bin/dev*.sh</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0750</fileMode>
            <directoryMode>0750</directoryMode>
        </fileSet>
    </fileSets>
</assembly>
