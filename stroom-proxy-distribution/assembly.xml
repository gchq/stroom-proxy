<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/stroom-proxy/lib</outputDirectory>
      <includes>
        <!--<include>stroom-proxy:stroom-proxy-remote</include>-->
        <include>stroom-proxy:stroom-proxy-util</include>
        <include>stroom-proxy:stroom-proxy-app</include>
        <include>mysql:mysql-connector-java</include>
      </includes>
    </dependencySet>
    <!-- Unpack the documentation into the the ZIP -->
    <!--<dependencySet>-->
      <!--<outputDirectory>/stroom-proxy/stroom-doc</outputDirectory>-->
      <!--<includes>-->
        <!--<include>stroom:stroom-doc</include>-->
      <!--</includes>-->
      <!--<unpack>true</unpack>-->
      <!--<useStrictFiltering>true</useStrictFiltering>-->
      <!--<useProjectArtifact>false</useProjectArtifact>-->
    <!--</dependencySet>-->
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/stroom-proxy</outputDirectory>
      <includes>
        <include>apache*/**</include>
        <include>template*/**</include>
        <include>bin/*</include>
        <include>Dockerfile</include>
      </includes>
      <excludes>
        <!-- Exclude scripts used when we are working directly from svn -->
        <exclude>bin/dev*.sh</exclude>
      </excludes>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
  </fileSets>
</assembly>
