<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">
  <defaultCache eternal="true" maxElementsInMemory="100"
    overflowToDisk="false" />
  <cache name="remoteCache" maxElementsInMemory="1000" eternal="false"
    overflowToDisk="false" timeToIdleSeconds="${cacheTimeToIdleSeconds}"
    timeToLiveSeconds="${cacheTimeToLiveSeconds}" />
  <cache name="dataBaseCache" maxElementsInMemory="1000" eternal="false"
    overflowToDisk="false" timeToIdleSeconds="${cacheTimeToIdleSeconds}"
    timeToLiveSeconds="${cacheTimeToLiveSeconds}" />
</ehcache>

